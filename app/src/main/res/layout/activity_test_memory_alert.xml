<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/top_tip_all"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/top_tip_current"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_tip_all"
        android:layout_margin="10dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <Button
            android:id="@+id/malloc_java"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="申请java内存" />


        <Button
            android:id="@+id/free_java"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="释放java内存" />

        <Button
            android:id="@+id/malloc_native"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="申请Native内存" />


        <Button
            android:id="@+id/free_native"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="释放Native内存" />

    </LinearLayout>
</RelativeLayout>